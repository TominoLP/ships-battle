# Root configuration
root = true

# Default for all files
[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# JSON & YAML files (many tools require spaces)
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown (avoid weird alignment)
[*.md]
trim_trailing_whitespace = false
